<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid android:color="@color/colorRed" />

            <size
                android:height="50dp"
                android:width="50dp"/>
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp"/>

            <stroke
                android:width="3dp"
                android:color="@color/colorAccent"/>
        </shape>
    </item>
</selector>