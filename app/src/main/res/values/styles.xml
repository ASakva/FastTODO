<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToDoDialog"
        parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowAnimationStyle">@style/EditAnimation</item>

        
    </style>
    
    <style name="EditAnimation">
        <item name="android:windowEnterAnimation">@anim/edit_transition</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToDoRadioRed" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/todo_radio_red</item>
    </style>

    <style name="ToDoRadioOrange" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/todo_radio_orange</item>
    </style>

    <style name="ToDoRadioYellow" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/todo_radio_yellow</item>
    </style>

    <style name="ToDoRadioGreen" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/todo_radio_green</item>
    </style>

    <style name="ToDoTogle" parent="@android:style/Widget.Button.Toggle">
        <item name="android:button">@drawable/todo_togle</item>
    </style>

</resources>
